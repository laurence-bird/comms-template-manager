# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index

GET     /public/*file               controllers.Assets.at(path="/public", file)

GET     /healthcheck                controllers.MainController.healthcheck

GET     /login                      controllers.AuthController.login
GET     /oauth2callback             controllers.AuthController.oauth2Callback
GET     /auth-error                 controllers.AuthController.authError

GET    /templates/:commName/:version    controllers.MainController.getTemplateVersion(commName, version)
GET    /templates/:commName             controllers.MainController.listVersions(commName)
GET    /templates                       controllers.MainController.listTemplates

GET    /publish/template           controllers.MainController.publishNewTemplateGet
POST   /publish/template           controllers.MainController.publishNewTemplatePost

GET    /publish/template/:commName     controllers.MainController.publishExistingTemplateGet(commName)
POST   /publish/template/:commName     controllers.MainController.publishExistingTemplatePost(commName)


GET   /template/test/complex        controllers.MainController.testComplexTemplate
GET   /template/test/simple        controllers.MainController.testSimpleTemplate
GET   /template/test/:commName/:version      controllers.MainController.testTemplate(commName, version)
POST  /template/test/:commName/:version               controllers.MainController.processTemplate(commName, version)